{
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "vite": "^6.3.6",
    "vite-plugin-shopify": "^4.0.2"
  },
  "type": "module",
  "scripts": {
    "dev": "run-p -sr \"shopify:dev\" \"vite:dev\"",
    "deploy": "run-s \"vite:build\" \"shopify:push\"",
    "shopify:dev": "shopify theme dev --theme=$SHOPIFY_THEME_ID",
    "shopify:push": "shopify theme push --theme=$SHOPIFY_THEME_ID",
    "vite:dev": "vite",
    "vite:build": "vite build"
  }
}
