<div class="product-card">
    <a href="{{ product.url }}">
        {% render 'image',
            class: "blog-section__image rounded-lg",
            src: product.featured_image,
            alt: product.title,
            width: 256,
            height: 256,
            fallback: 'placeholder-256.svg'
        %}
    </a>
    <h3 class="product-card__title">
        {{ product.title }}
    </h3>
    <p class="product-card__description">
        {{ product.description | strip_html | truncatewords: 12 }}
    </p>
    <div class="product-card__price">
        {{ product.price | money }}
    </div>
    {% if product.url %}
        {% render 'button', 
            href: product.url, 
            label: 'product.more' | t, 
            variant: 'outline', 
            extra_class: 'btn--w-auto' 
        %}
    {% endif %}
</div>