{% style %}
  {% # Loads all font variantions with display: swap %}
  {{ settings.type_primary_font | font_face: font_display: 'swap' }}
  {{ settings.type_primary_font | font_modify: 'weight', 'bold' | font_face: font_display: 'swap' }}
  {{ settings.type_primary_font | font_modify: 'weight', 'bold' | font_modify: 'style', 'italic' | font_face: font_display: 'swap' }}
  {{ settings.type_primary_font | font_modify: 'style', 'italic' | font_face: font_display: 'swap' }}

  :root {
    --font-primary--family: {{ settings.type_primary_font.family }}, {{ settings.type_primary_font.fallback_families }};
    --font-primary--style: {{ settings.type_primary_font.style }};
    --font-primary--weight: {{ settings.type_primary_font.weight }};
    --page-width: {{ settings.max_page_width }};
    --page-margin: {{ settings.min_page_margin }}px;
    --color-background: {{ settings.background_color }};
    --color-foreground: {{ settings.foreground_color }};
    --style-border-radius-inputs: {{ settings.input_corner_radius }}px;
    --color-card: {{ settings.card_color }};
    --color-card-foreground: {{ settings.card_foreground }};
    --color-popover: {{ settings.popover_color }};
    --color-popover-foreground: {{ settings.popover_foreground }};
    --color-primary: {{ settings.primary_color }};
    --color-primary-foreground: {{ settings.primary_foreground }};
    --color-secondary: {{ settings.secondary_color }};
    --color-secondary-foreground: {{ settings.secondary_foreground }};
    --color-muted: {{ settings.muted_color }};
    --color-muted-foreground: {{ settings.muted_foreground }};
    --color-accent: {{ settings.accent_color }};
    --color-accent-foreground: {{ settings.accent_foreground }};
    --color-destructive: {{ settings.destructive_color }};
    --color-destructive-foreground: {{ settings.destructive_foreground }};
    --color-border: {{ settings.border_color }};
    --color-input: {{ settings.input_color }};
    --color-ring: {{ settings.ring_color }};
    --color-chart-1: {{ settings.chart_1_color }};
    --color-chart-2: {{ settings.chart_2_color }};
    --color-chart-3: {{ settings.chart_3_color }};
    --color-chart-4: {{ settings.chart_4_color }};
    --color-chart-5: {{ settings.chart_5_color }};
    --color-sidebar: {{ settings.sidebar_color }};
  }
{% endstyle %}
